[alias]
    br = branch -v
    ci = commit
    co = checkout
    cp = cherry-pick
    fp = format-patch
    last = log -1 -p --stat HEAD
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    mt = mergetool
    st = status
    rdiff = !git diff $(git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD)) HEAD
    wdiff = !git diff --word-diff
[branch]
    autosetupmerge = always
    autosetuprebase = always
[color]
    interactive = auto
    ui = auto
[color "branch"]
    upstream = cyan
[core]
    editor = vim
    excludesfile = ~/.gitignore
    pager = less -R -+X -+F
    whitespace = -trailing-space
[diff]
    mnemonicPrefix = true
    renames = true
    wordRegex = .
[fetch]
    recurseSubmodules = on-demand
[grep]
    extendedRegexp = true
[log]
    # abbrevCommit = true
    decorate = short
[merge]
    conflictStyle = diff3
    tool = vimdiff
[mergetool]
    keepBackup = false
    keepTemporaries = false
    prompt = false
[pager]
    diff = true
    status = false
    branch = false
[pull]
    rebase = true
    # Only available starting from 1.8.5
    # rebase = preserve
[push]
    default = tracking
[rerere]
    # autoupdate = true
    # enabled = true
[status]
    showUntrackedFiles = all
    submoduleSummary = true
[tag]
    sort = version:refname

[include]
    # Set there a [user] section for instance, or machine specific config
    path=~/.gitconfig.local

